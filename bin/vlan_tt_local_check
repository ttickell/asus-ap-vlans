#!/bin/sh

base="/jffs/local/bin"

## Run tool in config check mode to test if real run is needed
test=$("${base}/test_wlan_vlan_setup.sh" 2>&1)
res=$?

if [ "$res" -gt 0 ]; then
	${base}/
fi

# Make sure our cron job is there - will be missing in reboot
add_job=0
test=$(grep "\# secondary_wlan_vlan" "/var/spool/cron/crontabs/nimda" 2>&1)
res=$?

if [ "$res" -gt 0 ]; then 
	echo '*/1 * * * * 	/jffs/local/bin/swv_local_schedule_check.sh  # secondary_wlan_vlan' >> /var/spool/cron/crontabs/nimda
	killall -HUP crond
fi
